    {
      "name": "Pruebas PSE",
      "item": [
        {
          "name": "PSE - Pago Exitoso",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{private_key}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount_in_cents\": 500000,\n  \"currency\": \"COP\",\n  \"payment_method\": {\n    \"type\": \"PSE\",\n    \"user_type\": 0,\n    \"user_legal_id_type\": \"CC\",\n    \"user_legal_id\": \"123456789\",\n    \"financial_institution_code\": \"1001\"\n  },\n  \"customer_email\": \"test@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/transactions",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "transactions"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code es 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Estado de transacción es PENDING o APPROVED\", function () {",
                  "    var json = pm.response.json();",
                  "    pm.expect([\"PENDING\",\"APPROVED\"]).to.include(json.data.status);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "PSE - Pago Rechazado por Fondos Insuficientes",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{private_key}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount_in_cents\": 999999999,\n  \"currency\": \"COP\",\n  \"payment_method\": {\n    \"type\": \"PSE\",\n    \"user_type\": 0,\n    \"user_legal_id_type\": \"CC\",\n    \"user_legal_id\": \"123456789\",\n    \"financial_institution_code\": \"1001\"\n  },\n  \"customer_email\": \"test@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/transactions",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "transactions"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code es 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Estado de transacción es DECLINED\", function () {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json.data.status).to.eql(\"DECLINED\");",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "PSE - Pago sin banco (Error)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{private_key}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount_in_cents\": 500000,\n  \"currency\": \"COP\",\n  \"payment_method\": {\n    \"type\": \"PSE\",\n    \"user_type\": 0,\n    \"user_legal_id_type\": \"CC\",\n    \"user_legal_id\": \"123456789\"\n  },\n  \"customer_email\": \"test@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/transactions",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "transactions"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code es 422\", function () {",
                  "    pm.response.to.have.status(422);",
                  "});",
                  "",
                  "pm.test(\"Mensaje de error contiene Banco\", function () {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json.error.messages.join()).to.include(\"Banco\");",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}